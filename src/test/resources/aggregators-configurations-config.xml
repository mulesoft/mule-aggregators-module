                    <test:summary-info key="Error type" value="AGGREGATORS:AGGREGATOR_CONFIG"/>
                    <test:summary-info key="Message" value="A configured timeout of 0 is not valid. Value should be bigger than 0."/>
                </test:check-summary>
            </test:on-error-check-log>
        </error-handler>
    </flow>

