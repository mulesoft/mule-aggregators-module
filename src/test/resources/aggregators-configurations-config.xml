                </test:check-summary>
            </test:on-error-check-log>
        </error-handler>
    </flow>

    <flow name="zeroTimeoutGroup">
        <aggregators:group-based-aggregator name="5" content="#[payload]" groupId="id" groupSize="2" timeout="0" >
            <aggregators:aggregation-complete>
