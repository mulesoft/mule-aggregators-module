        </error-handler>
    </flow>

    <flow name="lowPeriod">
        <aggregators:time-based-aggregator name="4" content="#[payload]" period="100" periodUnit="MILLISECONDS" maxSize="3"/>
        <error-handler>
            <test:on-error-check-log>
